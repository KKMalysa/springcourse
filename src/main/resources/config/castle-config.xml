<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context" xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">
    <!-- bean definitions here -->

    <context:property-placeholder location="classpath:castle.properties"/>

    <bean id="zamek" class="pl.karolmalysa.springcourse.domain.Castle"
          init-method="build"
          destroy-method="tearDown">
        <constructor-arg index="0" ref="sirColder"/>
        <property name="name" value="${my.castle.name}"/>
    </bean>

    <bean id="tournament" class="pl.karolmalysa.springcourse.domain.Tournament">
       <property name="knight" ref="Garen"/> <!-- z tym że do tego potrzebny seter knight:knight w Tournamencie -->
    </bean> <!-- przypomnienie w XMLU nie ma wstrzykiwania do pól, musi być metoda np. seter  !!!!!!!!!!!!!!!!!  -->

</beans>